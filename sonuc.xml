<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#de8f10">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imageView" android:src="@drawable/ori_fed_logo" android:layout_gravity="center|top"
                android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oryantiring Test Sonucu"
                android:id="@+id/textView" android:textColor="#ff1d23" android:textSize="20dp"
                android:layout_gravity="center_horizontal" android:layout_marginTop="5dp"/>
        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:background="@android:color/white"
                android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
                android:layout_gravity="center|left">
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Doğru Sayısı  :   "
                    android:textColor="#1613ff" android:textSize="17dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/txtDogru" android:textColor="#25eb08" android:textSize="22dp"
                    android:layout_gravity="center_vertical"/>
            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text=" Yanlış Sayısı   :   " android:textColor="#1613ff"
                      android:textSize="17dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                      android:id="@+id/txtYanlis" android:textColor="#eb2a11" android:textSize="22dp"
                      android:layout_gravity="center_vertical"/>

            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text=" Boş Sayısı       :   " android:textColor="#1613ff"
                      android:textSize="17dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                      android:id="@+id/txtBos" android:textColor="#eb29d0" android:textSize="22dp"
                      android:layout_gravity="center_vertical"/>

            </TableRow>
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text=" Aldığınız Not   :   " android:textColor="#1613ff"
                      android:textSize="17dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                      android:id="@+id/txtNot" android:textColor="#faf215" android:textSize="22dp"
                      android:textStyle="bold" android:layout_gravity="center_vertical"/>
    </TableRow>

</TableLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Başarılı Bir Oryantiringçisin"
                android:id="@+id/txtSonuc" android:layout_gravity="center" android:textColor="#2cf90e"
                android:textStyle="bold" android:textSize="16dp" android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ana Menü"
                android:id="@+id/btnMain" android:textSize="18dp" android:textColor="#202fff"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>
